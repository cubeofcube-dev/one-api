{
	"compilerOptions": {
		"baseUrl": ".",
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "ES2020",
		"types": ["vitest/globals"],
		"useDefineForClassFields": true
	},
	"include": ["src"]
}
